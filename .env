# Database Configuration
DB_HOST=localhost
DB_PORT=5440
DB_USER=microservice_user
DB_PASSWORD=microservice_password
DB_NAME=microservice_db
DB_SSLMODE=disable

# API Configuration
API_PORT=9999

# Environment
ENVIRONMENT=development

# AWS S3 Configuration (Production)
AWS_REGION=us-east-1
AWS_S3_BUCKET=donatutti
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# LocalStack Configuration (for local S3 simulation)
# Uncomment the following line to use LocalStack instead of AWS S3:
# Use 'localstack' as hostname when running in Docker, or '127.0.0.1' for local
LOCALSTACK_ENDPOINT=http://localstack:4566
# 
# When using LocalStack, you can override AWS credentials with test values:
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
