# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=microservice_user
DB_PASSWORD=microservice_password
DB_NAME=microservice_db
DB_SSLMODE=disable

# API Configuration
API_PORT=9999

# Docker Configuration
# For development: Set DB_PORT_EXTERNAL=5440
# For production: Set DB_PORT_EXTERNAL=5432 (or leave unset)
DB_PORT_EXTERNAL=5432

# AWS S3 Configuration (Required for file uploads)
AWS_REGION=us-east-1
AWS_S3_BUCKET=dona-tutti-files
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h